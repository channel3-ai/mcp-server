{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./build",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["worker-configuration.d.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "build", ".wrangler"]
}
